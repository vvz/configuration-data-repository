<?xml version="1.0" encoding="us-ascii" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%5p (%F:%L) - %m%n"/>
		</layout>
	</appender>

	<appender name="bitBucket" class="org.apache.log4j.varia.NullAppender"/>

	<appender name="xmlFile" class="org.apache.log4j.FileAppender">
		<param name="file" value="${log.dir}/${webapp.name}_jetty.ixml"/>
		<param name="encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.xml.XMLLayout"/>
	</appender>

	<appender name="file" class="org.apache.log4j.FileAppender">
		<param name="file" value="${log.dir}/${webapp.name}_jetty.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%5p (%F:%L) - %m%n"/>
		</layout>
	</appender>

	<root>
		<priority value="info"/>
		<appender-ref ref="xmlFile"/>
	</root>

</log4j:configuration>